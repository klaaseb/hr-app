{% extends 'base.html.twig' %}

{% block title %}Hello HrController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Employees</h1>

    <a href="{{ url('view_all') }}"><button type="button" class="btn btn-primary"><i class="far fa-eye"></i>&nbsp; View monthly overview</button></a>
    <a href="{{ url('download_all') }}"><button type="button" class="btn btn-success"><i class="fas fa-download"></i>&nbsp; Download monthly overview</button></a>
    <br/><br/>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Employee</th>
      <th scope="col">Transport</th>
      <th scope="col">Distance</th>
      <th scope="col">Workdays per week</th>
    </tr>
  </thead>
  <tbody>
      {% for employee in employees %}
        <tr>
            <th scope="row">1</th>
            <td>{{employee.name}}</td>
            <td>{{employee.transportType.name}}</td>
            <td>{{employee.distance}}</td>
            <td>{{employee.workdays}}</td>
            <td>
              <a href="{{ url('view_employee', {id: employee.id}) }}"><button type="button" class="btn btn-primary"><i class="far fa-eye"></i></button></a>
              <a href="{{ url('download_employee', {id: employee.id}) }}"><button type="button" class="btn btn-success"><i class="fas fa-download"></i></button><a/>
            </td>
        </tr>
    {% endfor %}

    
  </tbody>
</table>
</div>
{% endblock %}
