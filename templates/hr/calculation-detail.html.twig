{% extends 'base.html.twig' %}

{% block title %}Hello HrController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Employees</h1>

    <table class="table">
  <thead>
    <tr>
      {% for label in labels %}
        <th scope="col">{{label}}</th>
      {% endfor %}
    </tr>
  </thead>
  <tbody>
      {% for calculation in calculations %}
        <tr>
            <td>{{calculation.employeeName}}</td>
            <td>{{calculation.transportType}}</td>
            <td>{{calculation.distance}}</td>
            <td>{{calculation.compensation}}</td>
            <td>{{calculation.paymentDate}}</td>
        </tr>
    {% endfor %}
    
  </tbody>
</table>
</div>
{% endblock %}
